<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_item_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/item_pre_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true" >

        <RadioButton
            android:id="@+id/openoff_item_rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobutton_background_selector"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/openoff_item_tv_text"
            android:layout_toRightOf="@id/openoff_item_rbtn"
            style="@style/setting_item_text_style" 
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            />
    </RelativeLayout>

</LinearLayout>